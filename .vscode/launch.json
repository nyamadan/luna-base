{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Lua Main",
      "type": "lua",
      "request": "launch",
      "stopOnEntry": false,
      "stopOnThreadEntry": true,
      "runtimeExecutable": "${workspaceFolder}/build/main.exe",
      "runtimeArgs": "${workspaceFolder}/scripts/main/dist/index.lua",
      "consoleCoding": "utf8"
    },
    {
      "name": "Debug Lua Test",
      "type": "lua",
      "request": "launch",
      "stopOnEntry": false,
      "stopOnThreadEntry": true,
      "runtimeExecutable": "${workspaceFolder}/build/main.exe",
      "cwd": "${workspaceFolder}/scripts/luna-base/tests",
      "runtimeArgs": "${workspaceFolder}/scripts/luna-base/tests/index.lua",
      "consoleCoding": "utf8"
    },
    {
      "name": "Node.js Generate GL Bindings",
      "program": "${workspaceFolder}/generate_gl_bindings.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "PowerShell Generate GL Bindings",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/generate_gl_bindings.ps1",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "(Windows) 起動",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/main.exe",
      "args": ["./scripts/main/dist/index.lua"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": []
    }
  ]
}
