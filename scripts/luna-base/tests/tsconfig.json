{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/vscode-typescript-to-lua/master/tsconfig-schema.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "importHelpers": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["lua-types/5.4", "../../lib/luaunit/luaunit"],
    "strict": true
  },
  "tstl": {
    "luaLibImport": "require",
    "buildMode": "default",
    "luaBundle": "index.lua",
    "luaBundleEntry": "index.ts",
    "luaTarget": "5.3"
  },
  "include": ["**/*.ts", "../src/**/*.ts", "../types/*.d.ts"],
  "exclude": ["../dist/**/*"]
}
